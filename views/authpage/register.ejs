    <script>

    const saveUserForm=document.getElementById("saveUserForm")
    
 
    const usernameInput=document.getElementById("usernameInput")
    const emailInput=document.getElementById("emailInput")
    const passwordInput=document.getElementById("passwordInput")

    const errorMsg=document.getElementById("errorMsg")

    saveUserForm.addEventListener("submit", async(e) => { 
      e.preventDefault()

      // console.log(usernameInput.value)

      const res= await fetch("/save-user" ,{
        method: "POST",
        body: JSON.stringify({username:usernameInput.value, email:emailInput.value , password:passwordInput.value}),
       headers: { "Content-Type": "application/json" },
      })

     const data= await res.json()
       
     
      // console.log(data.validateErrors)
       if(data.validateErrors){
        data.validateErrors.forEach(ele => {
          if(ele.path=="email"){
            errorMsg.innerText=ele.msg
            console.log("email not valid")
          }
          if(ele.path=="password"){
            errorMsg.innerText=ele.msg
            console.log("password not valid")
          }
          // return 
          
      });

       }

       
      //  check if user saved or not 
       if(data.saveError){
        errorMsg.innerText=data.saveError
       }
      //  check if the user exxist or not ============
        if(data.userexist){
            errorMsg.innerText=data.userexist
        }
       

        // check if the user saved successfully =====
        if(data.usersavedSuccessfully){
          location.assign("/")
        }
      

     })



    </script>
