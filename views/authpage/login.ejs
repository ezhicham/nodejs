    <main class="d-flex flex-nowrap">
      <%- include('../components/sidebar.ejs', {currentpage:"login"}); %>

      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <!-- import navbar component  -->

        <%- include("../components/navbar.ejs") %>

        <div
          class="welcome-text d-flex justify-content-center align-items-center flex-column mt-5"
        >
          <h2>weclome back !</h2>
          <p>please enter you credentials to login</p>
          <form id="loginForm"  class="w-75">
            <div class="email mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >email</label
              >
              <input
                 name="email"
                type="email"
                class="form-control"
                id="loginEmailinput"
                placeholder="name@example.com"
              />
            </div>

            <div class="password mb-3">
              <label for="exampleFormControlInput1" class="form-label"
                >password</label
              >
              <input
                name="password"
                type="password"
                class="form-control"
                id="loginPassinput"
                placeholder="enter your password"
              />
            </div>

            <button
              style="background-color: #8448fb; color: white"
              class="btn text-capitalize w-100"
              type="submit"
            >
              login
            </button>
            <p  id="loginerrorMsg" class="text-danger "></p>
          </form>
         
          <div class="register w-75">
            <p>you don't have account yet? <a href="/register">register</a></p>
          </div>
        </div>
      </section>
    </main>

    <script>
         const loginForm=document.getElementById("loginForm")
         const loginEmailinput=document.getElementById("loginEmailinput")
         const loginPassinput=document.getElementById("loginPassinput")

       const loginerrorMsg=document.getElementById("loginerrorMsg")

        //  send the data  api to check login===============
          loginForm.addEventListener("submit",async(e) => { 
            e.preventDefault()
            const res= await fetch("/login",{
              
              method:"POST",
              body:JSON.stringify({email:loginEmailinput.value ,password:loginPassinput.value}),
              headers:{"Content-Type": "application/json" }
            
            })

            // get the response 
            const data = await res.json()



            // check errors and display errors 

            if(data.userNotexist){
              loginerrorMsg.innerText=data.userNotexist
              console.log("email not exist")
            }
            // check if password is wrong and display error message
            if(data.passwordWrong){
              loginerrorMsg.innerText=data.passwordWrong
              console.log("password wrong ")
            }
             if(data.useID){
              console.log("done !! you login successfully ")
              location.assign("/")
             }
           })


    </script>
